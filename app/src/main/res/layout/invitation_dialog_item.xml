<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="11dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/user_avatar"
        android:layout_width="wrap_content">

        <ImageView
                    android:layout_width="70dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal"
                    android:id="@+id/attendee_image"
            android:layout_height="70dp"
            android:layout_margin="3dp" />

    </LinearLayout>

    <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <TextView
                    android:text="Nicolas INVITER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendeeNickName"
                    android:layout_gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textSize="16sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp">

                        <TextView
                         android:text="Available from"
                         android:layout_width="match_parent"
                            android:id="@+id/textView10"
                         android:layout_weight="1"
                         android:fontFamily="sans-serif"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:layout_height="20dp" />

                <local.nicolas.letsfan.TextTime
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/attendee_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                    </LinearLayout>

                    <Space
                        android:layout_height="match_parent"
                        android:layout_width="20dp"
                        android:layout_weight="0.6" />

                    <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="until"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp" />

                <local.nicolas.letsfan.TextTime
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/attendee_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
