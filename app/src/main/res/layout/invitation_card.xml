<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        app:contentPadding="10px"
        android:theme="@style/CardView.Light"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="10px"
        android:layout_margin="10px"
        android:layout_height="130dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/invitation_card_image"
                    app:srcCompat="@drawable/side_nav_backg"
                android:layout_width="130dp"
                android:layout_height="130dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.15" />

                <TextView
                        android:text="Nicolas INVITER"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/invitation_organiser"
                        android:layout_gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textAllCaps="false" />

                <TextView
                        android:text="17 dec, 2016"
                        android:layout_width="match_parent"
                    android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:id="@+id/invitation_date"
                        android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />

                <TextView
                        android:text="up to 3 people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/invitation_available_slot"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>
