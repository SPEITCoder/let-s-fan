<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal"
                android:id="@+id/imageView" />

            <TextView
                android:text="Nicolas INVITER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invitation_organiser"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:text="17 dec, 2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invitation_date" />

            <TextView
                android:text="up to 3 people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invitation_available_slot"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="341dp"
                android:layout_marginStart="341dp" />
        </GridLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>