<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:contentPadding="10px"
    android:theme="@style/CardView.Light"
    android:elevation="@dimen/cardview_default_elevation"
    android:padding="10px"
    android:layout_margin="10px">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/my_event_imageView"
                app:srcCompat="@drawable/side_nav_backg"
                android:layout_height="130dp"
                android:layout_weight="0.05"
                android:layout_width="130dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <TextView
                    android:text="Restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_event_restaurant"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:paddingTop="35dp" />

                <TextView
                    android:text="Organizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_event_organiser"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:layout_weight="0"
                    android:layout_margin="5dp" />

                <local.nicolas.letsfan.TextDate
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/my_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
