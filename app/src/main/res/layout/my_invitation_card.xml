<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160px"
        app:cardElevation="2dp"
        app:contentPadding="10px"
        android:theme="@style/CardView.Light"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="10px"
        android:layout_margin="10px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                app:srcCompat="@drawable/side_nav_backg"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_invitation_restaurant"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                <local.nicolas.letsfan.TextDate
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/my_invitation_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp">

                        <TextView
                            android:text="Start time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif" />

                        <local.nicolas.letsfan.TextTime
                            android:fontFamily="sans-serif-thin"
                            android:id="@+id/my_invitation_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="End Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif" />

                        <local.nicolas.letsfan.TextTime
                            android:fontFamily="sans-serif-thin"
                            android:id="@+id/my_invitation_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

</LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
